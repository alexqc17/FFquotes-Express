<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Fast and Furious</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <h1 data-position="header">Ride or die</h1>

    <section data-position="add-quote">
        <h2>Add driver</h2>
        <form action="/quotes" method="POST">
            <input type="text" placeholder="name" name="name" />
            <input type="text" placeholder="quote" name="quote" />
            <button type="submit">Submit</button>
        </form>
    </section>

    <section data-position="update-quote">
        <div>
            <h2>Brian O'Conner wants to join the race</h2>
            <p>Click the button so he can ride</p>
            <button id="update-button">Add Brian to the race</button>
        </div>
    </section>

    <section data-position="delete-quote">
        <div>
            <h2>Time to go Brian</h2>
            <p>
              Its been a lon day without you my friend
            </p>
            <button id="delete-button">Until I see you again</button>
        </div>
        <div id="message"></div>
    </section>

    <section data-position="quotes">
        <h2>Drivers</h2>
        <ul class="quotes">
            <% for(var i = 0; i < quotes.length; i++) {%>
            <li class="quote">
              <span><%= quotes[i].name %></span>:
              <span><%= quotes[i].quote %></span>
            </li>
            <% } %>
        </ul>
    </section>



      <script src="/main.js"></script>

  </body>
</html>